@model WebCarApp.Web.Models.ClientModels.DetailsClientViewModel

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">

    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item active">
                <a class="nav-link" asp-action="Create" asp-controller="Clients">Add New Client<span class="sr-only"></span></a>
            </li>

            <li class="nav-item active">
                <a class="nav-link" asp-action="All">Back to Client's list<span class="sr-only"></span></a>
            </li>

        </ul>

        <div class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search Client by EGN" name="egn" required>
            <button class="btn btn-outline-light my-2 my-sm-0" type="submit" name="clientSearchButton">Search</button>
            <form id="searchBar" asp-action="Details" method="get">
            </form>
        </div>
    </div>

</nav>
<div style="        position: relative;
        background: url(https://www.actuaries.digital/wp-content/uploads/2014/09/UpdateYourDetails_shutterstock_55051654-1600x750.jpg) center;
        background-size: cover;
        height: 500px;
        width: 100%;
        z-index: 0;">
</div>



<hr />
@if (ViewBag.Section != null)
{
    <script>
        alert("@ViewBag.Section");
    </script>
}
<div class="container">

    <form class="form" method="POST" asp-action="Edit">
        <div class="row">
            <div class="col">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control mb-2" required />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control mb-2" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="EGN" class="control-label"></label>
                            <input asp-for="EGN" class="form-control mb-4" required />
                            <span asp-validation-for="EGN" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control mb-4" placeholder="user@example.com" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control mb-4" required />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col d-flex justify-content-start">
                <button class="btn btn-outline-primary btn-block" type="submit">Save Changes</button>
            </div>
            <div class="col d-flex justify-content-end">
                @Html.ActionLink("Cancel", "All", "Clients", new object { }, new { @class = "btn btn-outline-danger btn-block" })
            </div>
        </div>
    </form>
    <br>
    <br>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
<script src="~/js/clientJs.js" asp-append-version="true"></script>