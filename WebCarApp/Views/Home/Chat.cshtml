@{
    this.ViewBag.Title = "Chat";
}
<link rel="stylesheet" href="~/css/chat.css" />
<div class="text-center">
    <h1 class="display-4">Welcome to Web Car App Chat Room</h1>
</div>

<br>
<br>
<br>
<div class="MyContainer">

    <section class="leftSection">
        <div class="float-left usernameContainer">

            <div class="usernameContainer">
                <div class="row">
                    <div class="col text-center">
                        <label>Enter your username: </label>
                        <input class="form-control mr-sm-2" type="search" placeholder="Username..." name="usernameInput" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <br>
                        <button id="safeChanges" class="align-middle btn btn-dark">Safe</button>
                    </div>
                </div>
            </div>
            <br>



        </div>
        <div class="float-left usernameFloatLeft" style="display:none;">
            <label>Your Username: </label>
            <div class="alert alert-primary theUsername" role="alert">
                <h5 id="usernameHolder"></h5>
            </div>

            <button id="changeUsername" class="btn btn-dark">Click here to change your username.</button>

        </div>
    </section>
</div>
<section class="rightSection">
    <div class="float-md-none">
        <h4>This is Web Car App Discussion</h4>
        <p>Here you can discuss everything about cars</p>
        <p>Macro's: </p>
        <button id="greetings" class="align-middle btn btn-dark">Greetings</button>
        <button id="goodbye" class="align-middle btn btn-dark">Goodbye</button>
        <button id="joke" class="align-middle btn btn-dark">Tell a joke </button>
        <br>

    </div>
</section>





<div class="ChatContainer">

    <div class="container-fluid">
        <div id="message-holder" class="mt-3 d-flex justify-content-start">
            <h4 class="mr-3">Message: </h4>
            <input class="w-75 mr-sm-2" type="text" id="messageInput" placeholder="Enter your message..." />
            <button id="sendButton" class="ml-4 btn btn-dark btn-lg">Send</button>
        </div>
        <hr style="height: 5px;" class="bg-dark" />
        <div id="messagesList" style="font-size: 28px;">

        </div>
    </div>

</div>





<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/ChatSignalR.js"></script>
